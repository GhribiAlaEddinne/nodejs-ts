{
  "extends": "@tsconfig/node-lts/tsconfig.json",

  "compilerOptions": {
    "target": "ES6",
    "rootDir": "./src",
    "outDir": "./dist",
    "baseUrl": ".",
    "paths": {
      "@/*": ["src/*"]
    },
    "allowJs": false,
    "strict": true
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"]
}
